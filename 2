const prompt = require("prompt-sync")(); // Importing a prompt-sync module to enable user input.

console.log('Welcome to the Climate Change Awareness Game!');

let score = 0; // Initialize score variable to track points.

// Updated the function to handle multiple correct answers and validate each input.
function decisionScenario(question, options, correctAnswerIndices) {
    console.log(question);

    // Loops through options and displays them correctly.
    for (let i = 0; i < options.length; i++) {
        console.log(`${i + 1}. ${options[i]}`);
    }

    let playerAnswer;
    // Input validation to ensure users enter a valid number within the options range.
    do {
        playerAnswer = parseInt(prompt("Enter your choice (number):")) - 1;
    } while (isNaN(playerAnswer) || playerAnswer < 0 || playerAnswer >= options.length);

    // Check if the user's answer is in the list of correct answers.
    if (correctAnswerIndices.includes(playerAnswer)) {
        console.log('Correct! You made an environment-friendly decision. +1 point.');
        score++; // Increment score for correct answers.
    } else {
        // Displays the first correct answer as feedback for incorrect choices.
        console.log(`Incorrect! The better choice would be: ${options[correctAnswerIndices[0]]}`);
    }
}

// Calls the function with updated logic to handle multiple correct answers where applicable.
decisionScenario(
    'You are going to the supermarket. How do you choose to carry your groceries?',
    ['Plastic bags provided by the store', 'Bring your own reusable bags', 'Carry them without any bag'],
    [1] // Updated to pass correct answers as an array.
);

decisionScenario(
    '\nYou are buying a new car. Which type do you choose?',
    ['A gasoline-powered car', 'A hybrid car', 'An electric car'],
    [2] // Correct answers updated as an array.
);

decisionScenario(
    '\nYou want to dispose of old electronics. What do you do?',
    ['Throw them in the regular trash', 'Sell or donate them', 'Take them to an e-waste recycling center', 'Refurbish and continue using them'],
    [2, 3] // Combined the duplicate scenarios and allowed multiple correct answers.
);

decisionScenario(
    '\nHow do you prefer to eat your meals?',
    ['Takeout from restaurants in disposable containers', 'Cooked at home with locally sourced ingredients', 'Processed and packaged meals', 'Home cooked meals with ingredients from your own garden'],
    [1, 3] // Edited to allow multiple correct answers.
);

console.log(`\nGame Over! Your total score is: ${score}. Thank you for playing.\n`);
